<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Travel Currency Converter"
        android:textSize="50dp"
        android:layout_marginTop="70dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/app_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home Country: "
        android:layout_below="@+id/app_name"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/countries"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/countries"
        android:layout_below="@+id/app_name"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/edt_home_country"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Travelling: "
        android:layout_below="@+id/countries"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/travelling"/>

    <EditText
        android:id="@+id/edt_travelling"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/camera_button"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/travelling" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/travelling"
        android:id="@+id/camera_button"
        android:src="@drawable/orange_camera"
        android:layout_marginTop="10dp"/>

</RelativeLayout>